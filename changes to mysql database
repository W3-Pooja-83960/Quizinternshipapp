ALTER TABLE options AUTO_INCREMENT = 1;

INSERT INTO options (question_id, option_text, is_correct)
VALUES
-- Java Basics Quiz (quiz_id = 1)
-- Question 1: "What is the size of int in Java?"
(1, '16 bits', 0),
(1, '32 bits', 1),
(1, '64 bits', 0),
(1, 'Depends on OS', 0),

-- Question 2: "Which keyword is used to inherit a class in Java?"
(2, 'implement', 0),
(2, 'extends', 1),
(2, 'inherits', 0),
(2, 'super', 0),

-- MySQL Fundamentals (quiz_id = 2)
-- Question 1: "Which command is used to create a database in MySQL?"
(3, 'CREATE DATABASE', 1),
(3, 'NEW DATABASE', 0),
(3, 'ADD DATABASE', 0),
(3, 'INSERT DATABASE', 0),

-- Question 2: "How do you retrieve all records from a table in MySQL?"
(4, 'SELECT * FROM table_name;', 1),
(4, 'GET ALL FROM table_name;', 0),
(4, 'FETCH * FROM table_name;', 0),
(4, 'SHOW ALL table_name;', 0);

