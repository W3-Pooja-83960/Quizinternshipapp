ALTER TABLE options
     DROP FOREIGN KEY options_ibfk_1;


mysql> ALTER TABLE options
     ADD CONSTRAINT options_ibfk_1
     FOREIGN KEY (question_id)
     REFERENCES questions(question_id)
     ON DELETE CASCADE;




